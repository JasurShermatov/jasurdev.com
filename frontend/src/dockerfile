# =============================
# Stage 1: Build
# =============================
FROM node:20-alpine AS build

# Ishchi papka
WORKDIR /app

# Environment variable build vaqtida uzatiladi
ARG VITE_API_BASE
ENV VITE_API_BASE=$VITE_API_BASE

# package.json va lock fayllarni copy qilamiz
COPY package*.json ./
COPY tsconfig*.json ./
COPY vite.config.ts ./

# Dependencies install
RUN npm ci

# Barcha source code'ni copy qilamiz
COPY . .

# Build the project
RUN npm run build

# =============================
# Stage 2: Serve
# =============================
FROM nginx:stable-alpine

# Nginx default config
COPY --from=build /app/dist /usr/share/nginx/html

# Agar custom nginx.conf bo‘lsa quyidagicha qo‘shish mumkin:
# COPY nginx.conf /etc/nginx/conf.d/default.conf

# Port expose
EXPOSE 80

# Nginx start
CMD ["nginx", "-g", "daemon off;"]